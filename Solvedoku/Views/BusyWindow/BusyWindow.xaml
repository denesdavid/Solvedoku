<Window x:Class="Solvedoku.Views.BusyWindow.BusyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Solvedoku.Views.BusyWindow"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="Transparent"
        AllowsTransparency="True"
        SizeToContent="WidthAndHeight"
        Title="BusyWindow" Height="450" Width="800">

    <Border BorderBrush="Black"
       BorderThickness="1.5"
       CornerRadius="10"
       Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Megoldás folyamatban..." HorizontalAlignment="Center"/>
            <ProgressBar Grid.Row="1" IsIndeterminate="True"/>
            <Button Grid.Row="2"/>
        </Grid>
    </Border>
</Window>
